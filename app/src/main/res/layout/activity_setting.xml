<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbackground">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/setting_toolbar"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                android:weightSum="2"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/left_text_notification"
                    android:gravity="bottom|left"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="消息通知"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/left_text_small_version"
                    android:gravity="top|left"
                    android:textSize="10dp"
                    android:layout_weight="1"
                    android:text="应用消息推送"
                    />
            </LinearLayout>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/right_text_notion"
                android:gravity="center"
                android:textStyle="normal"
                android:layout_alignParentRight="true"
                android:checked="true"
                />

        </RelativeLayout>
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/colorwhite_view"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/layout_clearcache">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                android:weightSum="2"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/left_text_clear_mem"
                    android:gravity="bottom|left"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="清除缓存数据"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/left_text_clear_mem_small"
                    android:gravity="top|left"
                    android:textSize="10dp"
                    android:layout_weight="1"
                    android:text="清除当前应用缓存数据（输入记录、个人信息）"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/right_text_clear_cache"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="normal"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/layout_cleardatabase">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                android:weightSum="2"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/left_text_clear_database"
                    android:gravity="bottom|left"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="清除数据库"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/left_text_clear_database_small"
                    android:gravity="top|left"
                    android:textSize="10dp"
                    android:layout_weight="1"
                    android:text="清除数据库所有数据"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/right_text_clear_database"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="normal"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/colorwhite_view"
            />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"

            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/zgshlogo"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="中石化石油工程设计有限公司"
                android:textStyle="bold"
                android:gravity="center|right"
                android:textSize="15dp"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>