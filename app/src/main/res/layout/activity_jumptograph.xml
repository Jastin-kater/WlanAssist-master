        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="350dp"

            android:layout_marginTop="50dp"
            android:background="@drawable/jianbian_bg"
            android:layout_centerInParent="true"
            >

            <!--电流/电压-->
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/lay_circle_bg"
                android:id="@+id/dianliu_layout"
                android:layout_above="@id/mach_bt_layout"
                android:layout_toLeftOf="@id/mach_bt_layout"

                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/jump_bt_cur_vol"
                    android:text="电流|电压"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/bt_circle_bg"
                    />

            </RelativeLayout>

            <!--送丝速度-->
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/lay_circle_bg"
                android:id="@+id/dianya_layout"
                android:layout_above="@id/mach_bt_layout"
                android:layout_toRightOf="@id/mach_bt_layout"

                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/jump_bt_sudu"
                    android:text="送丝速度|焊接速度"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/bt_circle_bg"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/lay_circle_bg"
                android:id="@+id/mach_bt_layout"
                android:layout_centerInParent="true"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/jump_mach_info"
                    android:text ="设备信息"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/bt_circle_bg"
                    />
            </RelativeLayout>
            <!--环境温度|环境湿度-->
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/lay_circle_bg"
                android:id="@+id/songsisudu_layout"
                android:layout_below="@id/mach_bt_layout"
                android:layout_toRightOf="@id/mach_bt_layout"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/jump_envir_temp_humi"
                    android:text="环境温度|环境湿度"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/bt_circle_bg"
                    />
            </RelativeLayout>

            <!--焊接速度|焊层温度-->
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/lay_circle_bg"
                android:id="@+id/baikuan_layout"
                android:layout_below="@id/mach_bt_layout"
                android:layout_toLeftOf="@id/mach_bt_layout"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/jump_bt_hanjiesdwd"
                    android:text="焊层温度"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/bt_circle_bg"
                    />
            </RelativeLayout>




        </RelativeLayout>


            <RelativeLayout
