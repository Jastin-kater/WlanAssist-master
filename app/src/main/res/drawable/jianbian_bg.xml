<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--点击之前-->
    <item android:state_pressed="false">
        <shape android:shape="oval" >
            <!--设置渐变色 angle=0 从左到右渲染，angle=90从上到下渲染，angle=180 从右到左渲染，-->
            <!--startColor 为开始颜色 ，  endColor 为最终后的颜色-->
            <gradient
                android:gradientRadius="110dp"
                android:startColor="#B6EBF0"
                android:endColor="#FA3B6BE2"
                android:type="radial"
                />
            <!--设置角的弧度-->
            <!--radius 越大，按钮越圆-->
            <corners android:radius="30dp" />
            <!--设置边框以及弧度-->
            <!--width 越大边框越大越明显  ， color 设置外边框颜色-->
            <stroke
                android:width="3dp"
                android:color="#257CDA" />
            <size android:width="200dp" android:height="200dp"></size>

        </shape>
        <ripple android:color="@color/color1">
        <item>
            <shape android:shape="oval">
                <solid android:color="#aacccccc"/>
            </shape>
        </item>
        </ripple>
    </item>

    <!--点击之后-->
    <item  android:state_pressed="true">
        <shape>
            <!--点击之后的颜色-->
            <solid android:color="#06f57a"/>
            <!--设置角的弧度-->
            <!--radius 越大，按钮越圆-->
            <corners android:radius="30dp"/>
            <!--点击之后的边框-->
            <!--width 越大边框越大越明显  ， color 设置外边框颜色-->
            <stroke
                android:width="3dp"
                android:color="#f70307"/>
        </shape>
    </item>
